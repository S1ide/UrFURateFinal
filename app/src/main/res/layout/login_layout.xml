<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <ImageView
        android:layout_width="375dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/mainwindow" />

    <ImageView
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:src="@drawable/textinputwindow" />

    <ImageView
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:src="@drawable/textinputwindow" />

    <EditText
        android:id="@+id/space"
        android:layout_width="285dp"
        android:layout_height="48dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="242dp"
        android:hint="@string/firstSpace"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/secondSpace"
        android:layout_width="285dp"
        android:layout_height="48dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="302dp"
        android:hint="@string/secondSpace"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/enabledBut"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="400dp"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onEnableBtnClick"
        android:scaleType="fitCenter"
        android:src="@drawable/enterbutton" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:text="@string/login_please"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/dark_grey"
        android:textSize="17sp"
        android:textStyle="bold" />


</RelativeLayout>